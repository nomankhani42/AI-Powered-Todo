# Production Environment Configuration for AI-Powered Todo Backend

# Database - Use Neon PostgreSQL in production
# Must be set via Vercel environment variables
DATABASE_URL=${DATABASE_URL}

# OpenRouter API Key for AI Features
# Must be set via Vercel environment variables
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
OPENROUTER_MODEL=qwen/qwen-2.5-72b-instruct

# JWT & Authentication
# Must be set via Vercel environment variables
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS & Security
# Allow requests from production frontend URL
ALLOWED_ORIGINS=https://ai-powered-todo-frontend.vercel.app,http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# AI Feature Configuration
AI_TIMEOUT_SECONDS=30
AI_RATE_LIMIT_CALLS=100
AI_RATE_LIMIT_WINDOW=3600

# Docker Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=todo_app
COMPOSE_PROJECT_NAME=todo-app-fullstack
